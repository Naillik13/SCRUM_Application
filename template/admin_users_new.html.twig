{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="text-center">Création d'Utilisateurs</h1>

    <br><br>

    <div class="text-center">
        <form method="post" action="../create_users.php" class="">
            <input type="text" name="username" class="form-control" placeholder="Nom d'utilisateur"><br>
            <label for="role">Rôle :</label>
            <select name="role">
                <option value="user">Utilisateur</option>
                <option value="admin">Administrateur</option>
            </select><br/><br/>

            <input type="submit" class="btn btn-outline-warning" value="Créer un utilisateur">
        </form>
    </div>
{% endblock %}